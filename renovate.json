{
  "extends": [
    "config:js-lib",
    ":rebaseStalePrs",
    ":automergeAll",
    ":label(internal)",
    ":dependencyDashboard",
    ":enableVulnerabilityAlerts"
  ],
  "ignorePaths": ["**/node_modules/**"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "bump"
    }
  ],
  "prConcurrentLimit": 1,
  "minimumReleaseAge": "3 days"
}
