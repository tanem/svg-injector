{
  "extends": [
    "config:js-lib",
    ":rebaseStalePrs",
    ":automergeAll",
    ":label(internal)",
    ":masterIssue",
    ":enableVulnerabilityAlerts"
  ],
  "ignorePaths": ["**/node_modules/**"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "depTypeList": ["dependencies"],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": [
        "@types/sinon",
        "sinon"
      ],
      "allowedVersions": "< 10.0.0"
    },
    {
      "matchPackageNames": [
        "@types/mocha",
        "mocha"
      ],
      "allowedVersions": "< 10.0.0"
    },
    {
      "matchPackageNames": [
        "@rollup/plugin-terser"
      ],
      "allowedVersions": "0.1.0"
    },
    {
      "matchPackageNames": [
        "query-string"
      ],
      "allowedVersions": "< 8.0.0"
    }
  ],
  "prCreation": "not-pending",
  "stabilityDays": 3
}
