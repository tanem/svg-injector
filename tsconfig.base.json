{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "exactOptionalPropertyTypes": true,
    "importHelpers": true,
    "lib": ["es2015", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "compiled",
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist"]
}
